<div class="card">

    <div class="card-header">
        <h4><a href="/post/{{id}}">{{title}}</a></h4>
        <h8>Posted by: {{user.username}} on {{format_date created_at}}</h8>
    </div>

    <div class="card-body">
        <p>{{post_content}}</p>
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</div>